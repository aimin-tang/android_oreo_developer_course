<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="I am thinking of a number between 1 and 20"
            android:layout_width="289dp"
            android:layout_height="41dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp" android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="568dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Can you guess it?"
            android:layout_width="197dp"
            android:layout_height="39dp"
            android:id="@+id/textView2"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="136dp" android:layout_marginStart="136dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="136dp"
            android:layout_marginRight="136dp"/>
    <EditText
            android:layout_width="236dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="Your guess" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="84dp" android:layout_marginStart="84dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp"/>
    <Button
            android:text="Guess!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:onClick="onClick"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:layout_marginRight="162dp"/>
</android.support.constraint.ConstraintLayout>