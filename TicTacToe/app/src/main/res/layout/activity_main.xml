<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.v7.widget.GridLayout
            android:layout_width="225dp"
            android:layout_height="225dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="300dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="93dp" android:layout_marginStart="93dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="93dp" android:layout_marginRight="93dp" android:layout_marginBottom="189dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/gridLayout" app:columnCount="3"
            app:rowCount="3" android:background="@drawable/grid">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView0" app:layout_column="0" app:layout_row="0" android:layout_margin="12dp"
                android:contentDescription="yellow circle" android:onClick="onClickCell"
                android:tag="0"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView1" app:layout_column="1" app:layout_row="0" android:layout_margin="12dp"
                android:contentDescription="yellow circle" android:onClick="onClickCell"
                android:tag="1"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView2" app:layout_column="2" app:layout_row="0" android:layout_margin="12dp"
                android:contentDescription="yellow circle" android:onClick="onClickCell"
                android:tag="2"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView3" app:layout_column="0" app:layout_row="1" android:layout_margin="12dp"
                android:contentDescription="yellow circle" android:onClick="onClickCell"
                android:tag="3"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView4" app:layout_column="1" app:layout_row="1" android:layout_margin="12dp"
                android:contentDescription="yellow circle" android:onClick="onClickCell"
                android:tag="4"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView5" app:layout_column="2" app:layout_row="1" android:layout_margin="12dp"
                android:contentDescription="yellow circle" android:onClick="onClickCell"
                android:tag="5"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView6" app:layout_column="0" app:layout_row="2" android:layout_margin="12dp"
                android:contentDescription="yellow circle" android:onClick="onClickCell"
                android:tag="6"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView7" app:layout_column="1" app:layout_row="2" android:layout_margin="12dp"
                android:contentDescription="yellow circle" android:onClick="onClickCell"
                android:tag="7"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView8" app:layout_column="2" app:layout_row="2" android:layout_margin="12dp"
                android:contentDescription="yellow circle" android:onClick="onClickCell"
                android:tag="8"/>

    </android.support.v7.widget.GridLayout>
    <Button
            android:text="Play Again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:onClick="againClicked" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp" android:layout_marginStart="161dp" android:layout_marginTop="165dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="146dp" android:layout_marginRight="146dp"/>
</android.support.constraint.ConstraintLayout>