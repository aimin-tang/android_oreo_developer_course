<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="355dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameEditText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" android:layout_marginTop="188dp"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Your name?" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp" android:layout_marginBottom="58dp"
            app:layout_constraintBottom_toTopOf="@+id/button"/>
    <Button
            android:text="Click me!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:onClick="onClick"
            android:layout_marginTop="58dp" app:layout_constraintTop_toBottomOf="@+id/nameEditText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="160dp" android:layout_marginRight="160dp" android:layout_marginBottom="395dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="What is your name?"
            android:layout_width="351dp"
            android:layout_height="20dp"
            android:id="@+id/namePromptTextView" android:layout_marginEnd="28dp" android:layout_marginRight="28dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="115dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginBottom="53dp"
            app:layout_constraintBottom_toTopOf="@+id/nameEditText"/>
    <ImageView
            android:layout_width="411dp"
            android:layout_height="0dp" app:srcCompat="@drawable/seljalandsfoss"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/button"
            android:scaleType="fitXY" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:alpha="1"/>
    <Button
            android:text="flip"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:id="@+id/button2"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="36dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp" android:onClick="onClickFlip"/>
    <ImageView
            android:layout_width="411dp"
            android:layout_height="0dp" app:srcCompat="@drawable/skogafoss"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/button"
            android:scaleType="fitXY" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:alpha="0"/>
</android.support.constraint.ConstraintLayout>