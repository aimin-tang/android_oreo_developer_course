<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#8BC34A">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Great App"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="36sp"
            app:layout_constraintVertical_bias="0.159" android:textStyle="bold" android:textColor="#80DA18"
            android:background="#A56F1F" android:id="@+id/textView"/>
    <EditText
            android:layout_width="381dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteX="17dp" android:id="@+id/editTextName"
            android:hint="Your name?" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <EditText
            android:layout_width="378dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteX="17dp" android:id="@+id/editTextPwd"
            android:hint="Password?" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextName"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPwd" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp" android:layout_marginStart="161dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp" android:onClick="buttonClicked"/>

</android.support.constraint.ConstraintLayout>